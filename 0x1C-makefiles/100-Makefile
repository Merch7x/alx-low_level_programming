CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f


.PHONY: all clean oclean fclean re

all: $(NAME)


$(NAME): $(OBJ)
	$(CC) -o $@ $(OBJ) -Wall -Wextra -pedantic -std=gnu11

main.o: main.c m.h
	$(CC) -c $< -o $@ -Wall -Wextra -pedantic -std=gnu11

school.o: school.c m.h
	$(CC) -c $< -o $@ -Wall -Wextra -pedantic -std=gnu11

re: fclean all


clean:
	-$(RM) *~ $(NAME) 

oclean:
	-$(RM) $(OBJ) *~

fclean: clean oclean
