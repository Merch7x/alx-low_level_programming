.PHONY: all clean oclean fclean re

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: m.h $(NAME)


$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) 


re: fclean all


clean:
	-$(RM) $(NAME) *~

oclean:
	-$(RM) $(OBJ) *~

fclean: clean oclean
